@using WebApplicationMVC.Areas.Template.Extensions
@using WebApplicationMVC.Models.ViewModels
@{
    var statusMessageViewModel = TempData.Get<StatusMessageViewModel>("StatusMessage");
}

@if(statusMessageViewModel != null)
{
    <div class="toast align-items-center text-white bg-{@statusMessageViewModel.Status} border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                @statusMessageViewModel.Message
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}